extends ../shared/layout
block heading
    h1= "Edit post"

block main-content
    form(action="/post/" + post._id + "/put" method="post")
        label(for="title") Title
        input#title(type="text" name="title" value=post.title)
        br
        label(for="content") Content
        input#content(type="text" name="content" value=post.content)
        br
        label(for="category") Category
        select(name="category")#category
            for category in categories
                case category.name
                    when post.category
                        option(value=category.name selected='selected')= category.name
                    default
                        option(value=category.name)= category.name
        br
        input(type="submit" value="Edit")
        