extends ../shared/layout
block heading
    h1= Admins

block main-content
    a(href="/admins/add") Add admins
    each admin in admins
        a(href='/profile/' + admin.username)
            h2= admin.username
        h3= "Name: " + admin.name
        if !(admin.username == currentUser.username)
            form(method="post" action="/admins/" + admin.username + "/delete")
                input(type="submit" value="Delete")